{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "docs": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "license": "MIT",
  "gitHooks": {
    "commit-msg": "node scripts/verifyCommit.js",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint"
    ],
    "*.ts?(x)": [
      "eslint"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "vitepress": "1.0.0-alpha.1"
  }
}
