{
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "docs": "vitepress dev src/",
    "docs:build": "vitepress build src/",
    "docs:serve": "vitepress serve src/"
  },
  "license": "MIT",
  "gitHooks": {
    "commit-msg": "node scripts/verifyCommit.js",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint"
    ],
    "*.ts?(x)": [
      "eslint"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "vitepress": "1.0.0-alpha.1",
    "vitepress-theme-demoblock": "^1.4.2",
    "vitest": "^0.15.1"
  }
}
